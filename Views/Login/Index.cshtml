@model CelsiaProject.Models.DTOs.UserDto

<body>
    <div class="row justify-content-center mt-3">
        <div class="col-md-8">
            <div class="card p-4 bg-dark text-light">
                <h2 class="text-center">Iniciar Sesi√≥n</h2>
                <form asp-controller="Login" asp-action="Index" method="post">
                    <div class="row mt-3">
                        <div class="form-group mb-2">
                            <label class="form-label" asp-for="Email">Email</label>
                            <input asp-for="Email" type="email" class="form-control" />
                        </div>
                        <div class="form-group mb-2">
                            <label class="form-label" asp-for="Password">Password</label>
                            <input asp-for="Password" type="password" class="form-control" />
                        </div>
                        <br>
                        <div class="text-danger">
                            @Html.ValidationSummary()
                        </div>
                    </div>
                    
                    <div class="form-group text-center mt-3">
                        <input type="submit" class="btn btn-success form-control" value="Log In">
                    </div>
                    <br>
                    <a class="text-decoration-none" href="@Url.Action("Index", "Users")">Register Here!</a>
                </form>
            </div>
        </div>
    </div>
</body>