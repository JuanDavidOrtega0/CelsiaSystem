<div class="container">
    <div class="row justify-content-center text-center mb-4 mt-3">
        <div class="col-md-2">
            <a type="button" class="btn btn-success" asp-controller="Customers" asp-action="Create">Add Customer</a>
        </div>
        <div class="col-md-8">
            <form asp-controller="Customers" asp-action="Search" method="get">
                <div class="input-group">
                    <input placeholder="Buscar" class="form-control" name="searchString" aria-describedby="id">
                    <button type="submit" class="btn btn-secondary" id="id">Buscar</button>
                </div>
            </form>
        </div>
    </div>

    <div class="text-center">
        <h1>Customers</h1>
    </div>

    <table class="table mt-3">
        <thead class="table table-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Document</th>
                <th scope="col">Address</th>
                <th scope="col">Phone Number</th>
                <th scope="col">Email</th>
                <th scope="col">Used Platform</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.Id</td>
                    <td>@customer.Name</td>
                    <td>@customer.Document</td>
                    <td>@customer.Address</td>
                    <td>@customer.PhoneNumber</td>
                    <td>@customer.PhoneNumber</td>
                    <td>@customer.UsedPlatform</td>
                </tr>
            }
        </tbody>
    </table>
</div>