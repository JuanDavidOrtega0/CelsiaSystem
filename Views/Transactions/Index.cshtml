<div class="container">
    <div class="row justify-content-center text-center mb-4 mt-3">
        <div class="col-md-2">
            <a type="button" class="btn btn-success" asp-controller="Transactions" asp-action="Create">Add Transaction</a>
        </div>
        <div class="col-md-8">
            <form asp-controller="Transactions" asp-action="Search" method="get">
                <div class="input-group">
                    <input placeholder="Buscar" class="form-control" name="searchString" aria-describedby="id">
                    <button type="submit" class="btn btn-secondary" id="id">Buscar</button>
                </div>
            </form>
        </div>
    </div>

    <div class="text-center">
        <h1>Transactions</h1>
    </div>

    <table class="table mt-3">
        <thead class="table table-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">DateTime</th>
                <th scope="col">Amount</th>
                <th scope="col">Status</th>
                <th scope="col">Type</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var transaction in Model)
            {
                <tr>
                    <td>@transaction.Id</td>
                    <td>@transaction.DateTime</td>
                    <td>$@transaction.Amount</td>
                    <td>@transaction.Status</td>
                    <td>@transaction.Type</td>
                </tr>
            }
        </tbody>
    </table>
</div>