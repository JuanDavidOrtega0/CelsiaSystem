@model CelsiaProject.Models.Transaction

<body>
    <div class="row justify-content-center mt-3">
        <div class="col-md-8">
            <div class="card p-4 bg-dark text-light">
                <h2 class="text-center">Create Transaction</h2>
                <form asp-controller="Transactions" asp-action="Create" method="post">

                    <div class="row mt-3">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mb-2">
                            <label class="form-label" asp-for="Id">Id</label>
                            <input asp-for="Id" type="text" class="form-control" />
                            <span asp-validation-for="Id" class="text-danger"></span>
                        </div>

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mb-2">
                            <label class="form-label" asp-for="DateTime">DateTime</label>
                            <input asp-for="DateTime" type="datetime-local" class="form-control" />
                            <span asp-validation-for="DateTime" class="text-danger"></span>
                        </div>

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mb-2">
                            <label class="form-label" asp-for="Amount">Amount</label>
                            <input asp-for="Amount" type="number" class="form-control" />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mb-2">
                            <label class="form-label" asp-for="Status">Status</label>
                            <select name="Status" id="Status" class="form-control">
                                <option value="Pendiente">Pendiente</option>
                                <option value="Completada">Completada</option>
                                <option value="Fallida">Fallida</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mb-2">
                            <label class="form-label" asp-for="Type">Type</label>
                            <select name="Type" id="Type" class="form-control">
                                <option value="Pago de Factura">Pago de Factura</option>
                            </select>
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group text-center mt-3">
                        <input type="submit" class="btn btn-success form-control" value="Create">
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>